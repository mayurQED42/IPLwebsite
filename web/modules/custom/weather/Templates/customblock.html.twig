{{attach_library('weather/mycssstyle')}}
{#
/**
 * @file
 * custom block.
 */
#}

<div class="myblocks" style="background-image: url('{{ file_url(image) }}');">
    <div class="city">
        <img src="modules/custom/weather/images/sun.png" height="100px" width="100px">
        <h1>{{ city }}</h1>
    </div>
    <div class="desc">
        <h1>{{ description }}</h1>
    </div>
</div>


<div class="blockwrapper">
    <div class="blockchild">
            min temp<h1> {{ temp_min }}</h1>
    </div>
    <div class="blockchild">
            max temp<h1> {{ temp_max }}</h1>
    </div>
    <div class="blockchild">
            pressure<h1> {{ pressure }}</h1>
    </div>
    <div class="blockchild">
            humidity<h1> {{ humidity }}</h1>
    </div>
    <div class="blockchild">
            wind<h1> {{ wind }}</h1>
    </div>
</div>
